<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_date"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="日期"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_time"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="時間"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_client"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="客戶"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_client"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_purpose"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="目的"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_purpose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_content"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="內容"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_location"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="地址"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_location"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_remarks"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@color/lightgray"
            android:gravity="center"
            android:text="備註"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/show_remarks"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="TextView" />

</LinearLayout>